<div class="container mt-3">
    <div class="row">
      <% @flats.each do |flat|  %>
      <div class="col-md-4">
        <div class="card">
        
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"> <%= flat.address %></p>
              <div class="flex">
                <div class="flex align-items-center">
                  <i class="fa-solid fa-users"></i>
                  <span><%= flat.number_of_guests %></span>
                </div>
                <div class="flex align-items-center">
                  <i class="fa-sharp fa-solid fa-euro-sign"></i>
                  <span><%= flat.price_per_night %></span>
                </div>
              </div class="flex">
                <%= link_to "More info", flat_path(flat)  %>
                <%= link_to "Edit", edit_flat_path(flat)  %>
                <%= link_to "Remove", 
                  flat_path(flat),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure"}  
                %>
            </div>
        </div>
      </div>
      <% end %>
    </div>
</div>






